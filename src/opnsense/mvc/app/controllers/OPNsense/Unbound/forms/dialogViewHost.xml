<form>
    <field>
        <id>host.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>Enable or disable this host.</help>
        <grid_view>
            <width>6em</width>
            <type>boolean</type>
            <formatter>rowtoggle</formatter>
        </grid_view>
    </field>
    <field>
        <id>host.hostname</id>
        <label>Hostname</label>
        <type>text</type>
        <help>Hostname for this DNS record. Wildcards are allowed.</help>
        <grid_view>
        </grid_view>
    </field>
    <field>
        <id>host.domain</id>
        <label>Domain</label>
        <type>text</type>
        <help>Domain name for this DNS record (e.g., example.com).</help>
        <grid_view>
        </grid_view>
    </field>
    <field>
        <id>host.rr</id>
        <label>Record Type</label>
        <type>dropdown</type>
        <help>DNS record type for this host.</help>
        <grid_view>
            <formatter>rrFormatter</formatter>
            <visible>false</visible>
        </grid_view>
    </field>
    <field>
        <id>host.server</id>
        <label>IP Address</label>
        <type>text</type>
        <help>IP address for A/AAAA records.</help>
        <grid_view>
        </grid_view>
    </field>
    <field>
        <id>host.ttl</id>
        <label>TTL</label>
        <type>text</type>
        <help>Time to live (in seconds) for this DNS record, e.g. 3600</help>
        <grid_view>
            <visible>false</visible>
        </grid_view>
    </field>
    <field>
        <id>host.description</id>
        <label>Description</label>
        <type>text</type>
        <help>You may enter a description here for your reference (not parsed).</help>
    </field>
    <field>
        <id>host.view_uuids</id>
        <label>Views</label>
        <type>select_multiple</type>
        <grid_view>
            <visible>true</visible>
        </grid_view>
    </field>
</form>
