<form>
    <field>
        <id>subnet.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>Enable or disable this subnet.</help>
        <grid_view>
            <visible>true</visible>
            <width>6em</width>
            <type>boolean</type>
            <formatter>rowtoggle</formatter>
        </grid_view>
    </field>
    <field>
        <id>subnet.network</id>
        <label>Client Subnet</label>
        <type>text</type>
        <help>Network address in CIDR notation (e.g., 192.168.1.0/24).</help>
        <grid_view>
        </grid_view>
    </field>
    <field>
        <id>subnet.view_uuid</id>
        <label>View</label>
        <type>dropdown</type>
        <help>Select the view this subnet belongs to.</help>
        <grid_view>
        </grid_view>
    </field>
    <field>
        <id>subnet.description</id>
        <label>Description</label>
        <type>text</type>
        <help>You may enter a description here for your reference (not parsed).</help>
        <grid_view>
        </grid_view>
    </field>
</form>
