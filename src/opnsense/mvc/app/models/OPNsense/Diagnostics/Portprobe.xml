<model>
    <mount>:memory:</mount>
    <version>1.0.0</version>
    <description>Port probe</description>
    <items>
        <settings>
            <hostname type="HostnameField">
               <Required>Y</Required>
               <ValidationMessage>Provide a valid hostname or address.</ValidationMessage>
            </hostname>
            <port type="PortField">
                <Required>Y</Required>
            </port>
            <ipproto type="OptionField">
                <Required>Y</Required>
                <Default>inet</Default>
                <OptionValues>
                    <inet>IPv4</inet>
                    <inet6>IPv6</inet6>
                </OptionValues>
            </ipproto>
            <source_address type="NetworkField">
              <NetMaskAllowed>N</NetMaskAllowed>
              <ValidationMessage>Provide a valid source address.</ValidationMessage>
            </source_address>
            <source_port type="PortField"/>
            <showtext type="BooleanField">
                <Default>0</Default>
                <Required>Y</Required>
            </showtext>
        </settings>
    </items>
</model>
